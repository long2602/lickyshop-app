<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditInfoActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/policy_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:gravity="center"
            android:paddingEnd="18dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo"
                ></ImageView>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:padding="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EDEDED"
                android:paddingBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center|top">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:background="@drawable/background_avatar2">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/edit_avatar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/avatar">
                        </de.hdodenhof.circleimageview.CircleImageView>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/edit_edit_name"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/regis_input_username_shape"
                        android:backgroundTint="@color/white"
                        android:ems="10"
                        android:hint="Họ và tên"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:paddingTop="14dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="14dp"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"></EditText>

                    <EditText
                        android:id="@+id/edit_edit_DOB"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/regis_input_username_shape"
                        android:backgroundTint="@color/white"
                        android:ems="10"
                        android:hint="Ngày sinh"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:paddingTop="14dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="14dp"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"></EditText>

                    <EditText
                        android:id="@+id/edit_edit_sdt"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/regis_input_username_shape"
                        android:backgroundTint="@color/white"
                        android:ems="10"
                        android:hint="Số điện thoại"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:paddingTop="14dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="14dp"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:enabled="false"></EditText>

                    <EditText
                        android:id="@+id/edit_edit_mail"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/regis_input_username_shape"
                        android:backgroundTint="@color/white"
                        android:ems="10"
                        android:hint="Email"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:paddingTop="14dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="14dp"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"></EditText>

                    <EditText
                        android:id="@+id/edit_edit_sex"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/regis_input_username_shape"
                        android:backgroundTint="@color/white"
                        android:ems="10"
                        android:hint="Giới tính"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:paddingTop="14dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="14dp"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"></EditText>
                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">
        <Button
            android:id="@+id/edit_btn_huy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:background="#EDEDED"
            android:text="Hủy"
            android:textColor="@color/black"
            android:textSize="15dp"
            >
        </Button>
        <Button
            android:id="@+id/edit_btn_xacnhan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:elevation="6dp"
            android:text="Lưu thay đổi"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginLeft="8dp">
        </Button>
    </LinearLayout>
</LinearLayout>