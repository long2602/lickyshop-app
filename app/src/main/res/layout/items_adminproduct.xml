<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:gravity="center"
    android:background="@color/white">
    <TextView
        android:id="@+id/itemadminproduct_txt_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:text="2"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:gravity="center"
        ></TextView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:padding="4dp">
        <ImageView
            android:id="@+id/itemadminproduct_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/long2"
            android:layout_gravity="center"
            ></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="3dp"
            android:gravity="center">
            <TextView
                android:id="@+id/itemadminproduct_txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ÁOCSFFSFSFS"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:id="@+id/itemadminproduct_txt_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá: 123453. VNĐ"
                ></TextView>
            <TextView
                android:id="@+id/itemadminproduct_txt_gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá: 123453. VNĐ"
                ></TextView>
            <TextView
                android:id="@+id/itemadminproduct_txt_sl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá: 123453. VNĐ"
                ></TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/itemaccount_imgview_edit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_edit"
            ></ImageView>
        <ImageView
            android:id="@+id/itemaccount_imgview_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_trash"
            android:layout_marginLeft="6dp"></ImageView>
    </LinearLayout>
</LinearLayout>