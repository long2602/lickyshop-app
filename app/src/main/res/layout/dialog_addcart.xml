<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm sản phẩm"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginBottom="10dp">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đã thêm vào giỏ hàng thành công sản phẩm"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:id="@+id/dialog_imgView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/shirt5">
                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="6dp"
                    android:gravity="center|start">
                    <TextView
                        android:id="@+id/dialog_txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BASIC SHIRT TEA"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        ></TextView>
                    <TextView
                        android:id="@+id/dialog_txt_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="L"></TextView>
                    <TextView
                        android:id="@+id/dialog_txt_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="540,000 VNĐ"
                        android:textColor="@color/black"
                        android:textStyle="bold"></TextView>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/dialog_btn_tieptuc"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Tiếp tục mua hàng"
                android:background="@drawable/dialog_button"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="12dp"
                >
            </Button>
            <Button
                android:id="@+id/dialog_btn_thanhtoan"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="Thanh toán ngay"
                android:drawableRight="@drawable/icon_next"
                android:background="@color/white"
                style="?android:attr/borderlessButtonStyle"
                android:paddingRight="74dp"
                android:paddingLeft="78dp"
                android:layout_marginTop="6dp"
                android:textSize="12dp"
                ></Button>
            <ImageView
                android:layout_width="130dp"
                android:layout_height="1.5dp"
                android:background="@color/black"
                android:layout_gravity="center"></ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>